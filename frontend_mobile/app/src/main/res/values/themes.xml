<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pawtopia" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>

        <!-- Bottom Navigation styling -->
        <item name="bottomNavigationStyle">@style/BottomNavigation.Pawtopia</item>
    </style>

    <style name="BottomNavigation.Pawtopia" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="itemBackground">@color/white</item>
    </style>
</resources>